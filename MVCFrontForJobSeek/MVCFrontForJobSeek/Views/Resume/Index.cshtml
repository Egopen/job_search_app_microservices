@model IEnumerable<MVCFrontForJobSeek.JSON.BriefResume>

@{
    ViewBag.Title = "Резюме";
}

<h1 class="mb-4">Список резюме</h1>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}
else if (!Model.Any())
{
    <div class="alert alert-warning">
        Резюме отсутствуют.
    </div>
}
else
{
    <div class="row">
        @foreach (var resume in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@resume.JobName</h5>
                        <p class="card-text"><strong>Город:</strong> @resume.City</p>
                        <p class="card-text"><strong>Зарплата:</strong> @resume.Salary ₽</p>
                        <p class="card-text"><strong>Опыт:</strong> @resume.Experience лет</p>
                        <a href="@Url.Action("Details", "Resume", new { id = resume.Id })" class="btn btn-primary">
                            Подробнее
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
